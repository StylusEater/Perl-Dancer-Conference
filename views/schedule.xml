<specification>
  <pattern name="durationpat" type="string">10</pattern>
  <pattern name="nicknamepat" type="string">NickName</pattern>
  <list name="nav_day" iterator="days">
    <param name="href" class="link" field="id" target="href" op="append"/>
    <param name="aria" class="link" field="id" target="aria-controls"/>
    <param name="class" class="nav_day" target="class" op="append" joiner=" "/>
    <param name="label" class="link"/>
  </list>
  <list name="tab-pane" iterator="tabs">
    <container name="has_rows" value="rows"/>
    <container name="no_rows" value="!rows"/>
    <param name="id" class="tab-pane" target="id"/>
    <param name="date" filter="date_only"/>
    <list name="room-name" iterator="rooms">
      <param name="name"/>
    </list>
    <list name="timeslot" iterator="rows">
      <param name="time"/>
      <list name="slot" iterator="slots">
        <param name="rowspan" class="slot" target="rowspan"/>
        <param name="is_talk" field="author_name" op="toggle" args="tree"/>
        <param name="is_event" op="toggle" args="tree"/>
        <param name="is_empty" op="toggle" args="tree"/>
        <param name="author_name"/>
        <param name="author_nickname" pattern="nicknamepat"/>
        <param name="author_uri" target="href" op="append"/>
        <param name="title"/>
        <param name="talk-uri" class="title" field="uri"
          target="href" op="append"/>
        <param name="class" class="slot" target="class" op="append" joiner=" "/>
        <param name="duration" pattern="durationpat"/>
      </list>
    </list>
  </list>
  <list name="talks" iterator="talks">
    <param name="panel-title" field="day"/>
    <param name="date" filter="date_only"/>
    <list name="scheduled-talk" iterator="talks">
      <param name="duration_display"/>
      <container name="session-location" value="room">
        <param name="location" field="room"/>
      </container>
      <param name="speaker-name" class="speaker-link" field="author.name"/>
      <param name="speaker-link" target="href" op="append" field="author.uri"/>
      <param name="photo-link" target="href" op="append" field="author.uri"/>
      <param name="photo" target="src" field="author.photo_uri"/>
      <param name="talk-title" class="talk-link" field="title"/>
      <param name="talk-link" target="href" op="append" field="seo_uri"/>
      <param name="short_abstract"/>
    </list>
  </list>
  <list name="unscheduled" iterator="unscheduled">
  </list>
</specification>

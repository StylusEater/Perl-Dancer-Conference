<specification>
  <list name="nav-item" iterator="navigation_list">
    <param name="navigation_id"/>
    <param name="parent_id"/>
    <param name="uri"/>
    <param name="type"/>
    <param name="scope"/>
    <param name="name"/>
    <param name="description"/>
    <param name="alias"/>
    <param name="priority"/>
    <param name="isactive" field="active" filter="boolean"/>
    <param name="edit" field="navigation_id" target="href" op="append"/>
    <param name="delete" field="navigation_id" target="href" op="append"/>
    <param name="child" field="navigation_id" target="data-parent"/>
    <param name="create-type" class="child" field="type" target="data-type"/>
    <param name="create-scope" class="child" field="scope" target="data-scope"/>
    <param name="data-id" class="uri" target="data-tt-id" field="navigation_id"/>
    <param name="parent-id" class="uri" target="data-tt-parent-id" field="parent_id"/>
  </list>
</specification>

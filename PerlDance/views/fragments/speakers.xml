<specification>
  <list name="speaker-grid" iterator="speakers" class="speaker-row">
    <list name="speaker-row" iterator="row" class="speaker-item">
      <param name="name"/>
      <param name="company" field="addresses.first.company"/>
      <param name="city" field="addresses.first.city"/>
      <param name="country" field="addresses.first.country.name"/>
      <param name="photo" target="src" field="photo.uri"/>
      <param name="speaker-link" target="href" op="append" field="uri"/>
    </list>
  </list>
</specification>
